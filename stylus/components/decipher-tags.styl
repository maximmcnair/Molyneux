.decipher-tags
  height: 51px
  margin: 0px 10px
  padding: 0px 5px 5px 5px
  border-radius: 4px

.decipher-tags-taglist
  margin-bottom: 4px;
  display: inline;

.decipher-tags-tag
  display: inline-block;
  border-radius: 3px;
  background-color: #2b3137;
  color: #535a5f;
  font-weight: 800;
  padding: 2px 5px;
  margin-right: 5px;
  margin-top: 5px;

.decipher-tags-tag i
  color: #535a5f;
  text-decoration: none;
  cursor: pointer;
  transition color .3s

.decipher-tags-tag.selected
  background-color $colorRed

.decipher-tags-tag:hover i
  color: $colorRed;
  text-decoration: none;

.decipher-tags-input
  border: none;
  outline: 0;

.decipher-tags-invalid
  color: #FFF;

.decipher-tags-controls
  margin-top: 8px;
  min-height: 28px;

.decipher-tags-icon
  margin 5px 10px 0px 0px
  color #ffffff