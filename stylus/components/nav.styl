.aside-nav
  width 170px
  position fixed
  // float left
  background $colorGreyDark
  color $colorWhite
  height 100%
  z-index 9999
  top 0px
  bottom 0px
  left 0px

.header-logo
  margin 0
  font-size 25px
  text-align center
  height 70px
  padding-top 15px

.nav
  ul
    @extends .list-no-style
  a
    text-decoration none
  li
    text-align center
    font-size 25px
    padding 50px 0px
    transition background .3s
    &:hover
      background #41494f
      color #ffffff
  .is-active
    background #41494f
    &:hover
      background #41494f
      color #ffffff
  i
    display block
    font-size 40px