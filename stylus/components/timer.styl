.timers
  margin-top 40px

.timer
  background #ffffff
  clearfix()
  margin-bottom 10px
  border-radius 4px
  display block
  padding 15px

.timer__title
  font-size 25px
  margin 0
  color #41494f
  @extends .truncate
  width 100%

.timer__project
  margin 0

.timer__desc
  width 480px
  margin-right 20px
  float left
.timer__time
  width 128px
  float left
  i
    font-size 20px
    margin-right 5px
.timer__btn
  width 160px
  float right
  .btn
    width 100%